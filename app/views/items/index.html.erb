<!-- Rendering Title -->
<%= render 'shared/page_title', title: "Listing Menu Items" %>
<br>
<div class="table-users">
   <div class="header">Menu Items</div>
    <table id="tabledata">
        <thead>
            <th>Item Id</th>
            <th>Item Name</th>
            <th>Unit Price</th>
            <th>Tax (%)</th>
            <th>Discount (%)</th>
            <th>Actions</th>
            
        </thead>
        <tbody id="input"></tbody>
        <tbody id="template">
        	<% @items.each do |item| %>
        	<tr>
            	 <td><%= item.item_id %></td>
                 <td><%= item.item_name %></td>
                 <td><%= item.unit_price %></td>
                 <td><%= item.tax %></td>
                 <td><%= item.discount %></td>
                <td>
	                <%= link_to edit_item_path(item), class: "btn btn-default btn-sm" do %>
					    <i class="glyphicon glyphicon-edit"></i>
					<% end %>

					<%= link_to item_path(item), method: :delete, data: {Confirm: "Sure to delete" }, class: "btn btn-default btn-sm" do %>
					    <i class="glyphicon glyphicon-trash"></i>
					<% end %>
					
				</td>

            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="form-group">
				<div class="pull-left">
					<p>[<%= link_to "New Menu Item", new_item_path %>]</p>
				</div>
	</div>
</div>