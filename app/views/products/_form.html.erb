<div class="row">
	<div class="col-md-12">
		
		<%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-3">
					<%= f.label :product_code, "Product Code:" %>
				</div>
				<div class="col-md-3">
					<%= f.text_field :product_code, class: "form-control", placeholder: "Enter Product Code", autofocus: true %>
				</div>
				<div class="control-label col-md-3">
					<%= f.label :product_name, "Product Name:" %>
				</div>
				<div class="col-md-3">
					<%= f.text_field :product_name, class: "form-control", placeholder: "Enter Product Name" %>
				</div>
			</div>
			<br><hr>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :purchase_price, "Purchase:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :purchase_price, class: "form-control", placeholder: "Enter Purchase price ₹" %>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :sale_price, "Sale:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :sale_price, class: "form-control", placeholder: "Enter Sale price ₹"%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :tax_name, "Tax Name:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :tax_name, class: "form-control", placeholder: "Tax Name"%>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :tax_type, "Tax Type:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :tax_type, class: "form-control", placeholder: "Tax Type"%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :tax, "Tax (%):" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :tax, class: "form-control", placeholder: "Tax (%)"%>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :cess, "Cess (%):" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :cess, class: "form-control", placeholder: "Cess (%)"%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :quantity, "Quantity:" %>
				</div>
				<div class="col-md-2">
					<%= f.text_field :quantity, class: "form-control", placeholder: "Quantity"%>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :products_remaining, "Remaining:" %>
				</div>
				<div class="col-md-2">
					<%= f.text_field :products_remaining, class: "form-control", placeholder: "Remaining"%>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :products_sold, "Sold:" %>
				</div>
				<div class="col-md-2">
					<%= f.text_field :products_sold, class: "form-control", placeholder: "Sold"%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :category, "Category:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :category, class: "form-control", placeholder: "Category"%>
				</div>
				<div class="control-label col-md-2">
					<%= f.label :description, "Description:" %>
				</div>
				<div class="col-md-4">
					<%= f.text_area :description, class: "form-control", placeholder: "Description"%>
				</div>
			</div>
			<div class="form-group">
				<div class="pull-left">
					<p>[<%= link_to "Product Listings", products_path %>]</p>
				</div>
				<div class="pull-right">
					<p><%= f.submit "Save", class: "btn btn-info btn-xlarge" %></p>
				</div>
			</div>
		<%end%>

	</div>

</div>